<div class="event">

  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '',
                      class: 'event-background',
                      style: "background-image: url(#{asset_path('event_thumb.jpg')})"
      %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3>
              <small><%= link_to @event.address, "https://yandex.ru/maps/#{@event.address}" %></small>
            </h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
              <div class="row">
                <div class="buffer-top col-xs-3">
                  <%= link_to 'Изменить', edit_event_path(@event), class: 'btn btn-primary' %>
                </div>
                <div class="buffer-top col-xs-9">
                  <%= link_to 'Удалить событие', event_path(@event), method: :delete,
                              class: 'btn btn-danger', data: {confirm: t('are_you_sure_event')} %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
